<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OutputActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="8dp"
        android:background="@drawable/bg_output">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="16dp"
            android:background="@drawable/bgwhite">


            <TextView
                android:id="@+id/textViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/avenir_regular"
                android:text="Beasiswa : " />

            <TextView
                android:id="@+id/textViewBeasiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/avenir_mediumitalic"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Besar Beasiswa" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="24dp"
        android:background="#fff">

        <TextView
            android:id="@+id/textViewIPK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/avenir_mediumitalic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="Indeks Prestasi : "/>

        <TextView
            android:id="@+id/textViewGaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIPK"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_mediumitalic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="Gaji Orang tua : "/>

        <Button
            android:id="@+id/hitung"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:onClick="onClick"
            android:background="@drawable/roundedbuttoncolor"
            android:fontFamily="@font/avenir_regular"
            android:textColor="@android:color/white"
            android:text="Hitung Ulang" />

    </RelativeLayout>

</LinearLayout>